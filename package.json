{
  "name": "gcalendar-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Google Calendar API v3",
  "license": "MIT",
  "author": "",
  "type": "module",
  "bin": {
    "gcalendar-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch --project tsconfig.json",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check": "npm run lint && npm run build && npm run test",
    "setup": "tsx src/setup.ts",
    "setup:built": "node build/index.js --setup",
    "start": "node build/index.js"
  },
  "keywords": [
    "google-calendar",
    "mcp",
    "model-context-protocol",
    "calendar",
    "google"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.0",
    "dotenv": "^16.0.0",
    "googleapis": "^144.0.0",
    "open": "^10.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.54.0"
  }
}
